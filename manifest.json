{
  "manifest_version": 3,
  "name": "NoobPrice",
  "version": "1.0",
  "description": "Compare pre√ßos de jogos automaticamente entre lojas como Steam, Epic e Nuuvem!",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://store.steampowered.com/app/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}