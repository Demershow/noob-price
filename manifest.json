{
  "manifest_version": 3,
  "name": "NoobPrice",
  "version": "1.0",
  "description": "Compare pre√ßos de jogos automaticamente entre lojas como Steam, Epic e Nuuvem!",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.isthereanydeal.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://store.steampowered.com/app/*"
      ],
      "js": [
        "content.js",
        "inject-button.js"
      ],
      "run_at": "document_idle"
    }
  ]
}